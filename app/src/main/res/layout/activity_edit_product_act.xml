<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img1"
    android:gravity="center"
    tools:context=".acitivity.EditProductACT">

    <EditText
        android:id="@+id/edMaMon"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã Món" />
    <EditText
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:id="@+id/edTenMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Tên Món" />


    <EditText
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:id="@+id/edMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô Tả" />
    <EditText
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:id="@+id/edGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Giá" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:background="@drawable/editboder"
            android:id="@+id/btnAddTheLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addSaveProduct"
            android:text="Lưu" />
        <Button
            android:id="@+id/btnCancelUser"
            android:onClick="Huy"
            android:background="@drawable/editboder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Huỷ" />
    </LinearLayout>
    <Button
        android:id="@+id/btnShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Show"
        android:text="Show" />


</LinearLayout>